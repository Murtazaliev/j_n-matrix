@model JournalNOEP_DOMAIN.DataConferenceEdition

<div class="modal-dialog  modal-dialog-vertical-center" role="document">
    <div class="modal-content bd-0 tx-14">
        <div class="modal-header pd-x-25">
            <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Выпуск</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body ">
            <div class="form-group has-success mg-b-0">
                <form id="add_edition_modal" asp-action="EditEdition" asp-controller="Conference" method="post">
                    <input type="hidden"  asp-for="Id" />
                    <input type="hidden"  asp-for="DataConferenceYearId" />
                    <input class="form-control"  placeholder="Выпуск" type="text" style="width:220px" asp-for="Edition"  required />
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" form="add_edition_modal" class="btn btn-success pd-x-20">Сохранить</button>
            <button type="button" class="btn btn-secondary pd-x-20" data-dismiss="modal">Закрыть</button>
        </div>
    </div>
</div>