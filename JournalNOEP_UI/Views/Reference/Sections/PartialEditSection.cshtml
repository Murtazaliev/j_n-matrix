@model JournalNOEP_DOMAIN.SprJournalSection
<div class="modal-dialog modal-dialog-vertical-center" role="document">
            <div class="modal-content bd-0 tx-14">
                <div class="modal-header pd-y-20 pd-x-25">
                    <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold">Раздел</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body pd-25">
                    <div class="form-group has-success mg-b-0">
                        <form id="add_author_modal" method="post" asp-action="EditSection" asp-controller="Reference">
                            <input type="hidden" name="Id" asp-for="Id" />
                            <h3>Русский</h3>
                            <input class="form-control" name="SectionName" placeholder="Раздел" type="text" style="width:450px" asp-for="SectionName" required />
                            <textarea rows="10" class="form-control mg-t-20" name="SectionInfo" placeholder="Описание" asp-for="SectionInfo"></textarea>
                            <br />
                            <h3>English</h3>
                            <input class="form-control" name="SectionNameEng" placeholder="Section" type="text" style="width:450px"  asp-for="SectionNameEng" />
                            <textarea rows="10" class="form-control mg-t-20" name="SectionInfoEng" placeholder="Description"  asp-for="SectionInfoEng" ></textarea>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" form="add_author_modal" class="btn btn-success pd-x-20">Сохранить</button>
                    <button type="button" class="btn btn-secondary pd-x-20" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
