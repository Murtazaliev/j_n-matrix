@model JournalNOEP_DOMAIN.Articles

<div class="modal-dialog modal-dialog-vertical-center" role="document">
    <div class="modal-content bd-0 tx-14">
        <div class="modal-header pd-y-20 pd-x-25">
            <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold"><i class="fa fa-file-pdf-o text-danger"></i> PDF версия выпуска </h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body pd-25">
            <div class="form-group has-success mg-b-0">
                <form id="add_author_modal" asp-action="EditArticleFile" asp-controller="Journal" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Id" asp-for="Id" />
                    <input type="hidden" name="EditionId" asp-for="EditionId" />

                    <input type="file" class="form-control-file" name="ArtFileNew" accept="application/pdf" required>

                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" form="add_author_modal" class="btn btn-success pd-x-20">Сохранить</button>
            <button type="button" class="btn btn-secondary pd-x-20" data-dismiss="modal">Закрыть</button>
        </div>
    </div>
</div>