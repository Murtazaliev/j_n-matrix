@model MainViewModel
<!-- Mobile Menu -->
<nav id="menu">
    <ul>
        @if (MainViewModel.Language != "EN")
        {
            <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
            <li><a asp-action="Index" asp-controller="Editions">Журнал</a></li>
            <li><a asp-action="Index" asp-controller="Authors">Поиск статей</a></li>
            <li><a asp-action="Index" asp-controller="MetaData">Метаданные</a></li>
        }
        else
        {
            <li class="active"><a asp-action="Index" asp-controller="Home">Main</a></li>
            <li><a asp-action="Index" asp-controller="Editions">Magazine</a></li>
            <li><a asp-action="Index" asp-controller="Authors">Search for articles</a></li>
            <li><a asp-action="Index" asp-controller="MetaData">Metadata</a></li>
        }
        <li>
            <a href="#">Информация журнала</a>
            <ul>
                @foreach (var item in Model.DataInfoList)
                {
                    if (item.IsSectionOnMainPage == false)
                    {
                        @if (MainViewModel.Language != "EN")
                        {
                            <li><a asp-action="Journal" asp-controller="Home" asp-route-infoId="@item.Id">@item.InfoNameRu</a></li>
                        }
                        else
                        {
                            <li><a asp-action="Journal" asp-controller="Home" asp-route-infoId="@item.Id">@item.InfoNameEn</a></li>
                        }
                    }
                }
            </ul>
        </li>
    </ul>
</nav>

<header id="header-home-2" class="header-home bg-transparent fixed" style="background-color:#333131;">
    <h1 class="logo">
        <a href="/home/index">
            <img src="~/images/logo-on-dark.png" class="img-responsive" alt="Image">
        </a>
    </h1>
    @if (MainViewModel.Language != "EN")
    {
        <a asp-action="MyAction" asp-controller="Home" asp-route-Lang="EN" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" class="ot-btn border-theme btn-contact" style="margin-top:25px;padding: 0 20px; margin-left:3px; color:gray;">EN</a>
    }
    else
    {
        <a asp-action="MyAction" asp-controller="Home" asp-route-Lang="RU" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" class="ot-btn border-theme btn-contact" style="margin-top:25px;padding: 0 20px; margin-left:3px; color:gray;">RU</a>
    }

    <nav id="main-nav" class="main-nav">
        <ul>
            @if (MainViewModel.Language != "EN")
            {
                <li><a asp-action="Index" asp-controller="Editions">Журнал</a></li>
                <li><a asp-action="Index" asp-controller="Authors">Поиск статей</a></li>
                <li><a asp-action="Index" asp-controller="MetaData">Метаданные</a></li>
            }
            else
            {
                <li><a asp-action="Index" asp-controller="Editions">Magazine</a></li>
                <li><a asp-action="Index" asp-controller="Authors">Search for articles</a></li>
                <li><a asp-action="Index" asp-controller="MetaData">Metadata</a></li>
            }
            <li>
                <a href="#">Информация журнала</a>
                <ul>
                    @foreach (var item in Model.DataInfoList)
                    {
                        if (item.IsSectionOnMainPage == false)
                        {
                            @if (MainViewModel.Language != "EN")
                            {
                                <li><a asp-action="Journal" asp-controller="Home" asp-route-infoId="@item.Id">@item.InfoNameRu</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Journal" asp-controller="Home" asp-route-infoId="@item.Id">@item.InfoNameEn</a></li>
                            }
                        }
                    }
                </ul>
            </li>
        </ul>
    </nav>
    <a href="#menu" class="btn-menu-mobile"><span class="lnr lnr-menu"></span></a>
</header>
<!-- /End Header 1 Warp -->
